@model Store.Web.Model.CreateOrderModel

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <!-- Custom fonts for this template-->
    <link href="~/Content/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
    <link href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i" rel="stylesheet">


    <!-- Custom styles for this template-->
    <link href="~/Content/css/sb-admin-2.min.css" rel="stylesheet">
</head>

<div class="container-fluid">
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Orders</h6>
        </div>

        <div class="card-body" style=" margin:5px">
            @using (Html.BeginForm("Index", "Orders", FormMethod.Post))
            {
                <fieldset class="form-horizontal">
                    <input data-val="true" data-val-number="The field ID must be a number." data-val-required="The ID field is required." id="ID" name="ID" type="hidden" value="4" />

                    <div class="control-group row-cols-5">
                        <label class="control-label" for="Client">Client</label>
                        <div class="controls">
                            @Html.DropDownListFor(x => Model.ClientId, Model.Clients, htmlAttributes: new { @class = "form-control", @id = "Client", @name = "Client" })
                            <span></span>
                        </div>
                    </div>

                    <div class="control-group row-cols-5" style="margin:20px 0px 20px 0px">
                        <label class="control-label" for="Product">Product:</label>
                        <div class="controls">
                            @Html.DropDownListFor(x => Model.ProductId, Model.Products, htmlAttributes: new { @class = "form-control", @id = "Product", @name = "Product" })
                            <span></span>
                        </div>
                    </div>

                    <div class="control-group row-cols-6" style="margin:20px 0px 10px 0px">
                        <label class="control-label" for="Quantity">Quantity:</label>
                        <div class="controls">
                            @Html.TextBoxFor(x => x.Quantity, htmlAttributes: new { @class = "form-control form-control-user", @id = "Quantity", @name = "Quantity", @type = "number", @placeholder = "Enter Quantity..." })
                            <span></span>
                        </div>
                    </div>

                    <div class="form-actions no-color">
                        <input type="submit" value="Save" class="btn btn-primary btn-user btn-block" style="width:200px; margin: 50px 0px 20px 0px" />
                    </div>
                </fieldset>
            }
        </div>
    </div>
</div>
