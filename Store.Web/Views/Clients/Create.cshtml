@model Store.Web.Model.CreateClientModel

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <!-- Custom fonts for this template-->
    <link href="~/Content/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
    <link href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i" rel="stylesheet">


    <!-- Custom styles for this template-->
    <link href="~/Content/css/sb-admin-2.min.css" rel="stylesheet">
</head>

<div class="container-fluid">
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Products</h6>
        </div>

        <div class="card-body" style=" margin:5px">
            @using (Html.BeginForm("Index", "Clients", FormMethod.Post))
            {
            <fieldset class="form-horizontal">

                <div class="control-group row-cols-6">
                    <label class="control-label" for="FirstName">First Name:</label>
                    <div class="controls">
                        @Html.TextBoxFor(x => x.FirstName, htmlAttributes: new { @class = "form-control form-control-user", @id = "FirstName", @name = "FirstName", @type = "text", @placeholder = "Enter first name..." })
                        <span></span>
                    </div>
                </div>

                <div class="control-group row-cols-6" style="margin:20px 0px 10px 0px">
                    <label class="control-label" for="LastName">Last Name:</label>
                    <div class="controls">
                        @Html.TextBoxFor(x => x.LastName, htmlAttributes: new { @class = "form-control form-control-user", @id = "LastName", @name = "LastName", @type = "text", @placeholder = "Enter last name..." })
                        <span></span>
                    </div>
                </div>

                <div class="control-group row-cols-6" style="margin:20px 0px 10px 0px">
                    <label class="control-label" for="Street">Street:</label>
                    <div class="controls">
                        @Html.TextBoxFor(x => x.Street, htmlAttributes: new { @class = "form-control form-control-user", @id = "Street", @name = "Street", @type = "text", @placeholder = "Enter street..." })
                        <span></span>
                    </div>
                </div>

                <div class="control-group row-cols-6" style="margin:20px 0px 10px 0px">
                    <label class="control-label" for="City">City:</label>
                    <div class="controls">
                        @Html.TextBoxFor(x => x.City, htmlAttributes: new { @class = "form-control form-control-user", @id = "City", @name = "City", @type = "text", @placeholder = "Enter city..." })
                        <span></span>
                    </div>
                </div>

                <div class="control-group row-cols-6" style="margin:20px 0px 10px 0px">
                    <label class="control-label" for="State">State:</label>
                    <div class="controls">
                        @Html.TextBoxFor(x => x.State, htmlAttributes: new { @class = "form-control form-control-user", @id = "State", @name = "State", @type = "text", @placeholder = "Enter state..." })
                        <span></span>
                    </div>
                </div>

                <div class="control-group row-cols-6" style="margin:20px 0px 10px 0px">
                    <label class="control-label" for="C">Country:</label>
                    <div class="controls">
                        @Html.TextBoxFor(x => x.Country, htmlAttributes: new { @class = "form-control form-control-user", @id = "Country", @name = "Country", @type = "text", @placeholder = "Enter country..." })
                        <span></span>
                    </div>
                </div>

                <div class="form-actions no-color">
                    <input type="submit" value="Save" class="btn btn-primary btn-user btn-block" style="width:200px; margin: 50px 0px 20px 0px" />
                </div>
            </fieldset>
            }
        </div>
    </div>
</div>
