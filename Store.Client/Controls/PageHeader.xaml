<UserControl x:Class="Store.Client.Controls.PageHeader"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Store.Client.Controls"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             d:DesignHeight="30"
             d:DesignWidth="800"
             mc:Ignorable="d">

    <StackPanel Background="{StaticResource Header.Background.Brush}" Orientation="Horizontal">
        <Label Content="Home" FontSize="12" />

        <Label Content="{Binding Title}" FontSize="12" />
    </StackPanel>

</UserControl>
